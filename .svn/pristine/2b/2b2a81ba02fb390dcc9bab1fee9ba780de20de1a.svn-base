/* Custom Theme */
$color-brand: #1b7ff5;
$color-brand-light: #549ff8;
$color-brand-dark: #1666c4;

// app 全局样式

/* 去除滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

page,
.taro_router,
.taro_page {
  height: 100%;
  display: flex;
  flex-direction: column;
  // background: #0F3259;
  background: #041625;
  color: #F4F6F8;
  overflow: auto;
  font-size: 14Px;
  font-family: 'Microsoft YaHei';
}

.flex-box {
  display: flex;
}

.flex-box-between {
  display: flex;
  justify-content: space-between;
}

// 视图点击效果
.ac_action:active {
  opacity: 0.6;
  // background: #549ff8;
}

.app_page_title {
  position: relative;
  padding-left: .5rem;
  display: flex;
  align-items: center;
  justify-content: space-between;

  .app_page_title_left {
    display: flex;
    align-items: baseline;
  }

  &:after {
    content: "";
    display: inline-block;
    position: absolute;
    left: 0;
    top: 50%;
    margin-top: -0.42667rem;
    width: .125rem;
    height: 0.85333rem;
    background-color: $color-brand;
    box-shadow: rgba(97, 144, 232, 0.2) 0px 0.14933rem 0.256rem 0px;
    border-radius: .125rem;
  }

  &_mainTitle {
    font-size: 1rem
      /* 16/16 */
    ;
  }

  &_subTitle {
    text-align: right;
    font-size: .75rem
      /* 12/16 */
    ;
    color: rgba(153, 153, 153, 1);
    padding-left: .125rem
      /* 2/16 */
    ;
  }

  .more {
    font-size: .75rem
      /* 12/16 */
    ;
    color: rgba(153, 153, 153, 1);
  }
}

// 表单开始
.form_item {
  .form_item_title {
    padding: .25rem
      /* 4/16 */
      0;
  }
}

.at-form {
  height: 100%;
  padding: 0;
  margin: 0;
}

.at-form::after {
  border: none !important;
}

// 表单结束
.batteryBox {
  margin-top: 10px;
  position: relative;
  width: 72px;
  height: 126px;
  border: 1px solid #A5B3C4;
  padding: 4px;
  // overflow: hidden;

  .batteryBox_top {
    top: -4Px;
    position: absolute;
    height: 4Px;
    width: 30px;
    left: 21px;
    background: #A5B3C4;
  }

  .batteryBox_innner {
    height: 100%;
    padding: 4px;
    overflow: hidden;
    position: relative;

    .batteryBox_Bar {
      position: absolute;
      left: 0;
      bottom: 8px;
      background: #1B7EF2;
      width: 100%;
    }
  }
}


/* 引入 Taro UI 默认样式 */
@import "~taro-ui/dist/style/index.scss";
